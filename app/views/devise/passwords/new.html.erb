<div class="signup-banner">

  <div class="container center">
    <div class="tab-content form-new">
      <h2 class="d-flex justify-content-center">Mot de passe oublié ?</h2>
        <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <%= f.error_notification %>
          <div class="form-inputs">

            <%= f.input :email,
                        required: true,
                        autofocus: true,
                        input_html: { autocomplete: "email" } %>

          </div>

        <div class="d-flex justify-content-around form-actions">
          <div>
            <%= f.button :submit, "Envoyer le lien de réinitialisation", class: 'btn red-b-btn mt-4' %>
          </div>
        </div>
          <div class="d-flex justify-content-center mt-3">
            <div class="d-inline p-2"><%= link_to "Retour à l'écran de connexion", new_session_path(resource_name), class: 'red-h-btn mt-3' %>
            </div>
          </div>

    </div>
    <% end %>
  </div>
</div>
