<div class="signup-banner">

  <div class="container center">
    <div class="tab-content form-new">
      <h2 class="d-flex justify-content-center">S'inscrire</h2>
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= f.error_notification %>
          <div class="form-inputs">

            <%= f.input :email,
                        required: true,
                        autofocus: true,
                        label: "Email" %>
            <%= f.input :first_name,
                        required: true,
                        autofocus: true,
                        label: "PrÃ©nom" %>
            <%= f.input :last_name,
                        required: true,
                        autofocus: true,
                        label: "Nom" %>

            <%= f.input :password,
                        required: true,
                        hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                        label: "Mot de passe" %>
            <%= f.input :password_confirmation,
                        required: true,
                        label: "Confirmation du mot de passe" %>
            <%= f.input :birth_date,
                        as: :date,
                        start_year: Date.today.year - 90,
                        end_year: Date.today.year - 12,
                        required: true,
                        autofocus: true,
                        label: "Date de naissance" %>

          </div>

        <div class="d-flex justify-content-around form-actions">
          <div>
            <%= f.button :submit, "Sign up", class: 'btn btn-primary' %>
            <%= link_to "Login", new_user_session_path, class: 'mx-auto ' %>
          </div>
        </div>

      </div>
      <% end %>
    </div>
</div>
