<div class="signup-banner">

  <div class="container center">
    <div class="tab-content form-new">
      <h2 class="d-flex justify-content-center"></h2>
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">

            <%= f.input :email,
                        required: false,
                        autofocus: true,
                        input_html: { autocomplete: "email" } %>
            <%= f.input :password,
                        required: false,
                        input_html: { autocomplete: "current-password" } %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>

          </div>

        <div class="d-flex justify-content-around form-actions">
          <div>
            <%= f.button :submit, "Connexion", class: 'btn btn-flat-big' %>
          </div>
        </div>

          <div class="d-flex justify-content-center mt-3 f">
            <div class="d-inline p-2"><%= link_to "Mot de passe oubliÃ© ?", new_password_path(resource_name), class: 'btn-flat-skin' %>
            </div>
          </div>

          <div class="d-flex justify-content-center mt-4">
            <div class="d-inline p-2 ">Vous n'avez pas de compte Arter ?</div>
            <div class="d-inline p-2"><%= link_to "S'inscrire", new_registration_path(resource_name), class: 'red-h-btn mt-3' %></div>
          </div>


    </div>
    <% end %>
  </div>
</div>
