<div class="container center d-flex flex-column">
   <div class="d-flex justify-content-center nav-step-container">
      <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
        <li class="nav-item nav-bar">
          <a class="nav-link active step pills-color" id="pills-first-tab" data-toggle="pill" href="#pills-first" role="tab" aria-controls="pills-first" aria-selected="true">1. Catégorie</a>
        </li>
        <li class="nav-item nav-bar">
          <a class="nav-link step pills-color" id="pills-second-tab" data-toggle="pill" href="#pills-second" role="tab" aria-controls="pills-second" aria-selected="false">2. Description</a>
        </li>
        <li class="nav-item nav-bar">
          <a class="nav-link step pills-color" id="pills-third-tab" data-toggle="pill" href="#pills-third" role="tab" aria-controls="pills-third" aria-selected="false">3. Caractéristiques</a>
        </li>
        <li class="nav-item nav-bar">
          <a class="nav-link step pills-color" id="pills-fourth-tab" data-toggle="pill" href="#pills-fourth" role="tab" aria-controls="pills-fourth" aria-selected="false">4. Localisation</a>
        </li>
          <li class="nav-item nav-bar">
          <a class="nav-link step pills-color" id="pills-fifth-tab" data-toggle="pill" href="#pills-fifth" role="tab" aria-controls="pills-fifth" aria-selected="false">5. Prix</a>
        </li>

      </ul>
    </div>

    <div class="tab-content form-new" id="pills-tabContent">
      <%= simple_form_for(artwork) do |f| %>
        <div>
          <div class="tab-pane fade mt-3 display-none show active" id="pills-first" role="tabpanel" aria-labelledby="pills-first-tab">
            <h3>De quel type d'œuvre d'art s'agit-il ?</h3>
              <fieldset>
                <%= f.input :category, :label => "Catégorie" %>
              </fieldset>
              <div class="tab-buttons text-right" id="first-tab">
                <button class="btn btn-flat-big next-btn mt-2" href="#">Suivant</button>
              </div>
          </div>

          <div class="tab-pane mt-3 fade display-none" id="pills-second" role="tabpanel" aria-labelledby="pills-second-tab">
            <h3>Decrivez l'œuvre</h3>
              <fieldset>
                <%= f.input :name, :label => "Nom de l'œuvre" %>
                <%= f.input :artist, :label => "Nom de l'artiste" %>
                <%= f.input :description, :label => "Description" %>
              </fieldset>
              <div class="tab-buttons">
                <button class="btn btn-flat-dark previous-btn mt-2" href="#">Précédent</button>
                <button class="btn btn-flat-big next-btn mt-2" href="#">Suivant</button>
              </div>
          </div>

          <div class="tab-pane fade mt-3  display-none" id="pills-third" role="tabpanel" aria-labelledby="pills-third-tab">
            <h3>Quels sont les caractéristiques de votre œuvre ?</h3>
              <fieldset>
                <label class="btn btn-flat-big mt-5 mb-5">
                   Ajouter une image
                   <span style="display:none;">
                     <%= f.input :picture %>
                   </span>
                 </label>

                <%= f.input :height, :label => "Hauteur (cm)" %>
                <%= f.input :width, :label => "Largeur (cm)" %>
                <%= f.input :depth, :label => "Profondeur(cm)" %>
                <%= f.input :weight, :label => "Poids (kg)" %>
              </fieldset>
              <div class="tab-buttons">
                <button class="btn btn-flat-dark previous-btn mt-2" href="#">Précédent</button>
                <button class="btn btn-flat-big next-btn mt-2" href="#">Suivant</button>
              </div>
          </div>

           <div class="tab-pane fade mt-3  display-none" id="pills-fourth" role="tabpanel" aria-labelledby="pills-fourth-tab">
            <h3>Dans quel zone géographique se situe votre œuvre ?</h3>
              <fieldset>
                <div class="form-group string optional artwork_location">
                  <%= f.label :country, "Pays" %>
                  <%= f.country_select :country %>
                </div>
                <%= f.input :location, :label => "Adresse" %>
              </fieldset>
              <div class="tab-buttons">
                <button class="btn btn-flat-dark previous-btn mt-2" href="#">Précédent</button>
                <button class="btn btn-flat-big next-btn mt-2" href="#">Suivant</button>
              </div>
          </div>

          <div class="tab-pane fade mt-3 display-none" id="pills-fifth" role="tabpanel" aria-labelledby="pills-fifth-tab">
            <h3>Quel est le prix de votre œuvre ?</h3>
              <fieldset>
                <%= f.input :price, :label => "Prix (€)"  %>
              </fieldset>
              <div class="tab-buttons">
                <button class="btn btn-flat-dark previous-btn mt-2" href="#">Précédent</button>
                <%= f.submit "Créer", class:"btn-flat-big" %>
              </div>
          </div>
        </div>

       <% end %>
    </div>
</div>
