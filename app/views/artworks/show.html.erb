<div class="container">
  <div class="d-md-flex flex-md-equal w-100 my-md3 pl-md-3">

    <div>
      <img src="<%= cl_image_path @artwork.picture.url(:show_artwork) %>" class="img-fluid" alt="Responsive image">
    </div>

    <div>
      <div class="d-flex flex-column">

        <div class="p-2">
          <img src="<%= @artwork.user.avatar %>" class="card-trip-user avatar-bordered" />
          <div class="card-product-infos">
            <img src="" class="card-trip-user avatar-bordered" />
            <h2><%= @artwork.name %></h2>
            <p>Information sur l'œuvre : <%= @artwork.description %></p>
            <p>Artiste : <%= @artwork.artist %></p>
            <p>Dimension  L<%= @artwork.height %>* l<%= @artwork.width %>* P<%= @artwork.depth %> en cm</p>
            <p><strong>Prix : <%= @artwork.price %> € </p>

          </div>

          <% if @artwork.user == current_user %>
            <%= link_to "Modifier l'annonce", edit_artwork_path(@artwork), class: 'btn btn-primary' %>
          <% end %>
        </div>

        <div class="p-2">


                <%= render "bookings/bookingform", artwork: @artwork, booking: Booking.new %>

        </div>
      </div>
    </div>

  </div>
</div>
