function refreshToggle(innerHTML) {
  const switchToggle = document.getElementById('availability-toggle');
  switchToggle.innerHTML = innerHTML;
}

<% if @review.errors.any? %>
  refreshToggle('<%= j render "artworks/show", artwork: @artwork, review: @review %>');
<% else %>
  addReview('<%= j render "artworks/show", availability: @availability %>');
  refreshToggle('<%= j render "artworks/form", artwork: @artwork, review: Review.new %>');
<% end %>