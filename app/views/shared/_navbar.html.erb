<header>
  <div class="navbar navbar-expand-sm navbar-light navbar-lewagon nav-light-grad">
    <%= link_to artworks_path, class: "navbar-brand" do %>
      <%= image_tag "arter_logo.svg", class: "logo-arter" %>
    <% end %>

    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>


    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <% if user_signed_in? %>
          <li class="nav-item active">
            <%= link_to "Ajouter une œuvre", new_artwork_path, class: "nav-link navbarAddanArtwork"%>
          </li>
          <li class="nav-item active">
              <%= link_to "Tableau de bord", profile_path, class: "nav-link" %>
            </li>

          <li class="nav-item dropdown ml-3">
            <%= image_tag "https://kitt.lewagon.com/placeholder/users/pierrerognion", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
              <%= link_to "Mon Profil", edit_user_registration_path, class: "dropdown-item" %>
              <%= link_to "Se déconnecter", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
            </div>

          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Se connecter", artworks_path, class: "nav-link" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</header>
